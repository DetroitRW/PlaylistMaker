<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:id="@+id/buttonBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/side_padding"
        android:layout_marginTop="@dimen/padding_top_title"
        android:layout_marginRight="@dimen/side_padding"
        android:layout_marginBottom="@dimen/padding_bottom_title"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="@dimen/image_view_height_and_width"
            android:layout_height="@dimen/image_view_height_and_width"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_back" />

        <TextView
            android:id="@+id/textViewSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:text="@string/settings"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_settings"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/side_padding"
        android:layout_marginLeft="@dimen/side_padding">

        <TextView
            android:id="@+id/textViewNightThemes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dark_themes"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_settings" />

        <Switch
            android:id="@+id/switchThemes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/layout_height_settings"
        android:gravity="center_vertical"
        android:layout_marginRight="@dimen/side_padding"
        android:layout_marginLeft="@dimen/side_padding">

        <TextView
            android:id="@+id/textViewShareApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Share_app"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_settings" />

        <ImageView
            android:id="@+id/imageViewShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_share" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_settings"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/side_padding"
        android:layout_marginLeft="@dimen/side_padding">

        <TextView
            android:id="@+id/textViewSupport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Write_to_support"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_settings" />

        <ImageView
            android:id="@+id/imageViewSupport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/support" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_settings"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/side_padding"
        android:layout_marginLeft="@dimen/side_padding">

        <TextView
            android:id="@+id/textViewTermsOfUse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Terms_of_use"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_settings" />

        <ImageView
            android:id="@+id/imageViewArrowNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_arrow_next" />

    </LinearLayout>

</LinearLayout>